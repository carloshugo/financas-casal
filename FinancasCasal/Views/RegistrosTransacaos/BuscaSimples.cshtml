@model IEnumerable<FinancasCasal.Models.Transacao>
@{
    ViewData["Title"] = "Busca Simples";
}
<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Início</label>
                    <input type="date" class="form-control" name="inicio" value=@ViewData["inicio"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Fim</label>
                    <input type="date" class="form-control" name="fim" value=@ViewData["fim"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total sales = @Model.Sum(obj => obj.Valor).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Despesa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fundo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fundo.Pessoa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Conta.Banco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Conta.TipoConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Conta.CodigoConta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Efetivada)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Despesa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fundo.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fundo.Pessoa.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Conta.Banco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Conta.TipoConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Conta.CodigoConta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Efetivada)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 