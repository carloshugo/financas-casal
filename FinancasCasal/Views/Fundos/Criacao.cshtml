@model FinancasCasal.Models.ViewModels.FundoFormViewModel

@{
    ViewData["Title"] = "Criação";
}

<h2>@ViewData["Title"]</h2>

<h4>Fundo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fundo.Nome" class="control-label"></label>
                <input asp-for="Fundo.Nome" class="form-control" />
                <span asp-validation-for="Fundo.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fundo.Saldo" class="control-label"></label>
                <input asp-for="Fundo.Saldo" class="form-control" />
                <span asp-validation-for="Fundo.Saldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fundo.PessoaId" class="control-label"></label>
                <select asp-for="Fundo.PessoaId" asp-items="@(new SelectList(Model.Pessoas, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
